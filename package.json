{
  "name": "agents-monorepo",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "install": "npm-run-all -p install:*",
    "install:frontend": "npm --workspace frontend install",
    "install:backend": "npm --workspace backend install",
    "dev": "npm-run-all -p dev:*",
    "dev:frontend": "npm --workspace frontend run web",
    "dev:backend": "npm --workspace backend start",
    "test": "npm-run-all test:*",
    "test:frontend": "npm --workspace frontend test",
    "test:backend": "npm --workspace backend test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
